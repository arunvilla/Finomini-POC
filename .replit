modules = ["nodejs-20", "web", "python-3.11"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Mobile App"

[[workflows.workflow]]
name = "Frontend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Finomini-POC && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Expo Mobile App"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Finomini-Mobile && RCT_METRO_PORT=8080 npx expo start --port 8080 --clear"
waitForPort = 8080

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 40309
externalPort = 3000

[[ports]]
localPort = 41639
externalPort = 3001

[[ports]]
localPort = 45153
externalPort = 3002

[[ports]]
localPort = 45487
externalPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd Finomini-POC && npx serve -s build -l ${PORT:-5000} --listen-host 0.0.0.0"]
build = ["bash", "-c", "cd Finomini-POC && npm run build"]
